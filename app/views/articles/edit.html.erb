<%= form_for @article do |f|%>
  
  <%= f.label :text %>:
  <%= f.text_area :text %><br />

  <%= f.label :link %>:
  <%= f.text_field :link %><br />

  <%= f.label :title %>:
  <%= f.text_field :title %><br /> ex: 第一章 如你所願

  <%= f.label :subject %>:
  <%= f.text_field :subject %><br /> ex: 噩盡島1

  <%= f.label :num %>
  <%= f.text_field :num %><br /> ex: 1

  <%= f.submit %>

<% end %>