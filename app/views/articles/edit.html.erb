<h1> Edit Article</h1>

<%= form_for @article do |f|%>
  
  <%= f.label :text %>:
  <%= f.text_area :text , :cols => "400"%><br />

  <%= f.label :link %>:
  <%= f.text_field :link %><br />

  <%= f.label :title %>:
  <%= f.text_field :title %> ex: 第一章 如你所願 <br />

  <%= f.label :subject %>:
  <%= f.text_field :subject %> ex: 噩盡島1 <br />

  <%= f.label :num %>
  <%= f.text_field :num %> ex: 1 <br />

  <%= f.label "show" %>
  <%= f.text_field :is_show %> ex: (true =1, false = 0) <br />

  <%= f.submit %>

<% end %>



